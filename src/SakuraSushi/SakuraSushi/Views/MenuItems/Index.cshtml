@model IEnumerable<SakuraSushi.Domain.MenuItem>
@{
    ViewData["Title"] = "Menu Items";
}

<h1>Menu Items</h1>
<p><a class="btn btn-primary" asp-action="Create">Create New</a></p>

<table class="table table-striped">
    <thread><tr><th>Image</th><th>Name</th><th>Description</th><th>Price</th></tr></thread>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td style="width:80px">
                    @if (!string.IsNullOrEmpty(m.ImageUrl))
                    {
                        <img src="@m.ImageUrl" alt="@m.GetDisplayName()" style="height:60px;object-fit:cover;" />
                    }
                </td>
                <td>@m.GetDisplayName()</td>
                <td>@m.Description</td>
                <td>@m.Price.ToString("C")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@m.Id">Edit</a>
                    <a asp-action="Delete" asp-route-id="@m.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
