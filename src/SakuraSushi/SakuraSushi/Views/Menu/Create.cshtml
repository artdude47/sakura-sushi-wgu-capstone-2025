@model SakuraSushi.ViewModels.MenuItemVm
@{
    ViewData["Title"] = "Create Menu Item";
}

<h1>Create Menu Item</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>"
    <div class="mb-3">
        <label asp-for="ItemType" class="form-label"></label>
        <select asp-for="ItemType" class="form-select"
                asp-items="Html.GetEnumSelectList<SakuraSushi.ViewModels.MenuItemType>()"></select>
        <span asp-validation-for="ItemType" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ImageUrl" class="form-label"></label>
        <input asp-for="ImageUrl" class="form-control" placeholder="https://..." />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <button class="btn btn-primary" type="submit">Save</button>
    <a class="btn btn-secondary ms-2" asp-action="Index">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
